<div class="row">

    <div class="col-md-5">
        <img src="{{produto.foto_url}}" class="img-fluid rounded">
    </div>

    <div class="col-md-7">
        <h2>{{produto.nome}}</h2>
        <p>{{produto.descricao}}</p>

        <h4>R$ {{produto.preco}}</h4>

        <p><strong>Estoque:</strong> {{saldo}}</p>

        <form method="POST" action="/carrinho/add" id="formAddCarrinho">
            <input type="hidden" name="id" value="{{produto.id}}">
            <input type="number" name="quantidade" class="form-control w-25 mb-3" value="1" min="1">

            <button class="btn btn-success">Adicionar ao Carrinho</button>
        </form>

        {{#if usuario.vendedor}}
            {{#ifEquals usuario.id produto.vendedor_id}}
                <a href="/estoque/{{produto.id}}" class="btn btn-secondary mt-3">
                    Gerenciar Estoque
                </a>
                <form method="POST" action="/produto/{{produto.id}}/update_status" class="mt-3">
                    {{#if produto.ativo}}
                        <button class="btn btn-danger" onclick="return confirm('Retirar da exposição?')">
                            Retirar da exposição
                        </button>
                    {{else}}
                        <button class="btn btn-success" onclick="return confirm('Recolocar na exposição?')">
                            Recolocar na exposição
                        </button>
                    {{/if}}

                </form>
            {{/ifEquals}}

        {{/if}}
    </div>
</div>