<div class="container mt-4">
    <h2>Cadastrar novo produto</h2>

    {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
    {{/if}}

    <form method="POST" action="/produto/novo" class="mt-3">

        <div class="mb-3">
            <label class="form-label">Nome do produto</label>
            <input type="text" name="nome" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Descrição</label>
            <textarea name="descricao" class="form-control" rows="4" required></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Preço</label>
            <input type="number" step="0.01" name="preco" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">URL da foto</label>
            <input type="text" name="foto_url" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Categorias</label>

            {{#each categorias}}
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="categorias[]" value="{{id}}">
                    <label class="form-check-label">
                        {{nome}}
                    </label>
                </div>
            {{/each}}
        </div>


        <button class="btn btn-primary">Cadastrar</button>
    </form>
</div>
